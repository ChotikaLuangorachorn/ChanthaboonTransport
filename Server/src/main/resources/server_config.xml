<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="sqlExecutor" class="Server.SQLiteExecute">
        <property name="url" value="vanScheduler.db"/>
    </bean>

    <bean id="fileSource" class="ku.cs.event.server.FileSource">
        <constructor-arg value="event-data.csv"/>
    </bean>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="sqlExecutor"/>
        <property name="serviceName" value="CustomerService"/>
        <property name="serviceInterface" value="API.CustomerDatabaseManager"/>
        <property name="registryPort" value="1099"/>
    </bean>

</beans>