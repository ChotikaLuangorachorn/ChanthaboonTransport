<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="sqlExecutor" class="controllers.SQLiteExecutor">
    </bean>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="sqlExecutor"/>
        <property name="serviceName" value="CustomerService"/>
        <property name="serviceInterface" value="managers.CustomerDatabaseManager"/>
        <property name="registryPort" value="1099"/>
    </bean>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="sqlExecutor"/>
        <property name="serviceName" value="ManagerService"/>
        <property name="serviceInterface" value="managers.ManagerDatabaseManager"/>
        <property name="registryPort" value="5185"/>
    </bean>


    <bean id="customerExecutor" class="controllers.services.CustomerSQLiteService">
    </bean>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="customerExecutor"/>
        <property name="serviceName" value="CustomerService"/>
        <property name="serviceInterface" value="services.CustomerService"/>
        <property name="registryPort" value="5801"/>
    </bean>

    <bean id="driverExecutor" class="controllers.services.DriverSQLiteService">
    </bean>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="driverExecutor"/>
        <property name="serviceName" value="DriverService"/>
        <property name="serviceInterface" value="services.DriverService"/>
        <property name="registryPort" value="5802"/>
    </bean>

    <bean id="partnerExecutor" class="controllers.services.PartnerSQLiteService">
    </bean>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="partnerExecutor"/>
        <property name="serviceName" value="PartnerService"/>
        <property name="serviceInterface" value="services.PartnerService"/>
        <property name="registryPort" value="5803"/>
    </bean>

    <bean id="priceExecutor" class="controllers.services.PartnerSQLiteService">
    </bean>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="priceExecutor"/>
        <property name="serviceName" value="PriceService"/>
        <property name="serviceInterface" value="services.PriceService"/>
        <property name="registryPort" value="5804"/>
    </bean>

    <bean id="reservationExecutor" class="controllers.services.ReservationSQLiteService">
    </bean>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="reservationExecutor"/>
        <property name="serviceName" value="ReservationService"/>
        <property name="serviceInterface" value="services.ReservationService"/>
        <property name="registryPort" value="5805"/>
    </bean>

    <bean id="vanExecutor" class="controllers.services.VanSQLiteService">
    </bean>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="vanExecutor"/>
        <property name="serviceName" value="VanService"/>
        <property name="serviceInterface" value="services.VanService"/>
        <property name="registryPort" value="5806"/>
    </bean>
</beans>